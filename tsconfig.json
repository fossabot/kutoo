{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "rootDir": "src/",
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "lib": [
            "esnext"
        ],
        // "paths": {
        //     "@utils": [
        //         "utils/index.ts"
        //     ],
        //     "@declarations": [
        //         "declarations/index.ts"
        //     ]
        // },
        // "types": ["./lib/extractors/index.d.ts"],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "src/lib/*.ts",
        "src/declarations/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/test"
    ]
}